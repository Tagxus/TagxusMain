{
  "name": "MyExtension",
  "version": "0.6",
  "manifest_version": 2,
  "description": "blah blah",
  "browser_action": {"default_popup": "background.html"},
  "permissions": ["contextMenus", "http://localhost:8080/"],
  "background": {
    "scripts": [ "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["extension.css"],
	  "all_frames": true,
	  "run_at": "document_end",
      "js": ["jquery-1.11.3.min.js", "extension.js"]
    }
  ]
}